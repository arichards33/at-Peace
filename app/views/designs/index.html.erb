<h1> Designs </h1>

<% if @current_user != nil && @current_user.email == "admin@example.com" %>

<p>
  <%= link_to "Add New Design", "/designs/new" %>
</p>
<% end %>

<div class="row">
  <% Design.all.each do |example| %>
  <div class="col-sm-3 my-3 text-center">
    <% image_f = (example.image_file.present? ? example.image_file : 'piecelogo.png') %>
    <%= link_to image_tag(image_f, :class => "img-fluid"), "/designs/#{example.id}" %>
    <%= example.project_title%>

  </div>
  <% end %>
</div>
