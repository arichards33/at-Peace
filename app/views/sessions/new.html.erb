

<div class="container text-center">
  <img class="mb-4" src="/peacelogo.png" alt width="140" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Login</h1>
  <div class="row">
    <div class="col-sm-4 col-center-block">

    <%= form_tag "/sessions" do %>

      <p>Email: <input name="email" type="text" autofocus class="form-control"></p>
      <p>Password: <input name="password" type="password" autofocus class="form-control"></p>

      <button class="btn btn-lg btn-primary btn-block btn-warning text-white">Login</button>

      <% end %>
    </div>
  </div>

</div>
