
<% if @current_user != nil && @current_user.email == "admin@example.com" %>

<% i = Inspiration.find_by(id: params["id"]) %>

<h1>Editing <%= i.blog_title %></h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/inspirations#{i.id}", method: "patch" do %>

      <p>Blog Title: <input name="blog_title" type="text" autofocus class="form-control"></p>
      <p>Date: <input name="date_posted" type="text" autofocus class="form-control"></p>
      <p>Image File: <input name="image_file" type="text" autofocus class="form-control"></p>
      <p>Post: <input name="inspo_reason" type="text" autofocus class="form-control"></p>


      <button class="btn btn-primary">Update Post</button>

    <% end %>

  </div>
</div>
<% end %>
